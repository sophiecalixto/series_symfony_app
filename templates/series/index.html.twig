{% extends 'base.html.twig' %}

{% block title %}Listagem de s√©ries{% endblock %}

{% block body %}
    <a href="{{ path('app_series_add') }}" class="btn btn-primary mb-2">Adicionar</a>
    <ul class="list-group mt-4">
        {% for serie in seriesList %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ serie.name }}

                <div class="d-flex align-items-center">
                    <a href="{{ path('app_series_edit', {series: serie.id}) }}" class="btn btn-secondary me-2">Editar</a>
                    <form method="POST" action="{{ path('app_series_delete', {id: serie.id}) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger" value="Delete">Excluir</button>
                    </form>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
